<div class="container">
  <div class="row justify-content-center">

    <form id="specialisation-form" action="/specialisations/<%= @specialisation.specialisation_id%>" method="POST">

      <div class="form-group row">
        <label for="input-fn" class="col-3 col-form-label">Specialisation Name</label>
          <div class="col-9">
        <input id="input-fn" type="text" name="specialisation_name" placeholder="Please enter the specialisation name" value="<%= @specialisation.specialisation_name %>">
      </div>
    </div>

      <!-- Changes verb to PUT instead of POST if specialisation already exists -->
      <% if @specialisation.specialisation_id != nil%>
        <input type="hidden" name="_method" value="PUT">
      <% end %>

      <div class="form-group row">
        <button class="btn btn-secondary btn-lg btn-block" type="submit" value="Save Specialisation">
      </div>
    </form>
  </div>
</div>
