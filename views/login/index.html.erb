<link href="/open-iconic/font/css/open-iconic-bootstrap.css" rel="stylesheet">

<div class="container">
  <div class="row justify-content-center">
    <div class="form-login">

      <form action="/" method="POST">
        <h1 class="text-center">Login</h1><br>

        <div class="from-group row">
          <label class="col-3 col-form-label">Email</label>
          <div class="col-9">
            <input class="form-control input-sm chat-input" type="text" name="email" placeholder="Please enter your Email">
          </div>
        </div>

        <br>

        <div class="form-group row">
          <label class="col-3 col-form-label">Password</label>
          <div class="col-9">
            <input type="text" name="password" class="form-control input-sm chat-input" class="coded" placeholder="Please enter your Password">
          </div>
        </div>

        <!-- Displays error if details are incorrect -->
        <% if @correct_login == false %>
          <p class="incorrect-input">Your email or password is incorrect</p>
        <% end %>

        <!-- Displays error if trying to access a page before logging in -->
        <% if @not_logged_in == true %>
          <p class="incorrect-input">You must log in before accessing this page</p>
        <% end %>

        <div class="row justify-content-center">
          <div class="col-6">
            <input class="btn btn-primary btn-md btn-block" type="submit" value="Submit">
          </div>
        </div>

      </form>
    </div>
  </div>
</div>
